@model TechnologyComplex.Models.Facility
<html>
<head>

    <meta charset="utf-8">
</head>
<body>
    <style>

        div {
            border-radius: 5px;
        }

        input {
            border-radius: 5px;
            outline: none;
            border: none;
        }


    </style>
    @using (Html.BeginForm("AddFacility", "Home", FormMethod.Post))
    {
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal" area-hidden="true">X</button>
                <h4>Добавить Площадку</h4>
            </div>
            <div class="modal-body">

                <input type="hidden" value="@ViewBag.Id" name="Id" />
               

                <dt>Название площадки</dt>
                <dd> @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })</dd>

                <div style="position:relative;top:10px;">
                    <dd><input style="text-align: left;" type="submit" value="Добавить" /></dd>
                </div>

            </div>

        </div>
    }
</body>
</html>
